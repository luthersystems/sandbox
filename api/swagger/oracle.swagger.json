            }
          },
          "500": {
            "description": "Unexpected internal server error",
            "schema": {
              "$ref": "#/definitions/commonExceptionResponse"
            }
          },
          "503": {
            "description": "Service not available",
            "schema": {
              "$ref": "#/definitions/commonExceptionResponse"
            }
          }
        },
        "parameters": [
          {
            "name": "oracle_only",
            "description": "Skip the chaincode healthcheck.",
            "in": "query",
            "required": false,
            "type": "boolean",
            "format": "boolean"
          }
        ],
        "tags": [
          "Service"
        ]
      }
    },
    "/v1/transfer": {
      "post": {
        "operationId": "Transfer",
